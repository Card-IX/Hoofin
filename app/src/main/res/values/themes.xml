<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.GettaHoofin" parent="android:Theme.Material.Light.NoActionBar" />

    <!-- Splash screen theme -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background color -->
        <item name="windowSplashScreenBackground">@color/app_green</item>

        <!-- Use your app logo for the splash screen -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>

        <!-- Optional: Set the animation duration -->
        <item name="windowSplashScreenAnimationDuration">800</item>

        <!-- Set the theme that will be used after the splash screen -->
        <item name="postSplashScreenTheme">@style/Theme.GettaHoofin</item>
    </style>
</resources>